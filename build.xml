<project name="Blacklight" default="dist" basedir=".">
  <property name="project"  value="htrc-blacklight"/>
  <property name="version"  value="1.0.7"/>
  <description>
       Simple script to zip up the Blacklight directory and call it a release.
  </description>

  <property name="dist"  location="dist"/>

  <target name="init">
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${dist}"/>
  </target>

  <target name="dist" description="generate the distribution" >
    <mkdir dir="${dist}"/>

    <zip destfile="${dist}/${project}-${version}.zip"
         basedir="."
         excludes="jmeter/**, test/**, build.xml"
    />
  </target>

</project>
